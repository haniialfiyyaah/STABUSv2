<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical"
            android:background="@color/backgroundColor">
            <TextView
                android:id="@+id/tvNmBahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TAMBAH KEMASAN"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="22sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="@color/lightgray"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Kemasan"
                    android:inputType="textCapCharacters"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    android:id="@+id/textJumlahdg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Jumlah Dibutuhkan"
                        android:inputType="number"
                        android:textSize="16sp"/>
                </android.support.design.widget.TextInputLayout>
                <Spinner
                    android:id="@+id/spSatuan"
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:entries="@array/satuanKemasan"/>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textHarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Harga Satuan"
                    android:inputType="number"
                    android:textSize="16sp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.button.MaterialButton
                android:id="@+id/fabOk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:background="@drawable/ic_tombol_done"
                android:text="+"
                android:textSize="30sp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>