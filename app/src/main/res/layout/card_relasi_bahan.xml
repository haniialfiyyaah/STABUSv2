<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/backgroundColor"
    android:id="@+id/cardRelasi"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_outside_line">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvNamaDG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bahan Baku"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/tvJumlahDG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                android:text="Tidak Ada Harga"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvHargaDG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textAlignment="textEnd"
            android:text="Harga Terpilih"
            android:layout_weight="0"/>
    </LinearLayout>

</android.support.v7.widget.CardView>